<Window x:Class="WpfThreadingIssueSilentDemo.MainWindowSilent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfThreadingIssueSilentDemo"
        mc:Ignorable="d"
        Title="MainWindowSilentDemo" Height="450" Width="800">

	<StackPanel Margin="20">
		<TextBlock Text="Items.Count (binding):" FontSize="14" />

		<TextBlock Text="{Binding Items.Count}"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="DarkRed" />

		<Separator Margin="10"/>

		<TextBlock Text="Last collection change (manual update):" />

		<TextBlock Text="{Binding LastChange}"
                   FontSize="14"
                   Foreground="DarkGreen" />

		<Separator Margin="10"/>

		<TextBlock Text="Heartbeat (UI still alive):" />

		<TextBlock Text="{Binding Heartbeat}"
                   FontSize="14"
                   Foreground="Blue" />
	</StackPanel>
</Window>
