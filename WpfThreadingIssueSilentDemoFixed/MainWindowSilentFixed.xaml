<Window x:Class="WpfThreadingIssueSilentDemoFixed.MainWindowSilentFixed"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfThreadingIssueSilentDemoFixed"
        mc:Ignorable="d"
        Title="MainWindowSilentFixed" Height="450" Width="800">
	<StackPanel Margin="20">
		<TextBlock FontSize="16"
                   Text="Items count:" />

		<TextBlock FontSize="24"
                   FontWeight="Bold"
                   Text="{Binding Items.Count}" />

		<Button Margin="0,20,0,0"
                Content="Reload Items"
                Click="Reload_Click"/>
	</StackPanel>
</Window>
